[
  {
    "kernelSource": {
      "name": "xaga-android15",
      "repo": "https://github.com/MiCode/Xiaomi_Kernel_OpenSource",
      "branch": "xaga-s-oss",
      "device": "xaga",
      "defconfig": "xaga_defconfig"
    },
    "toolchains": [
      {
        "name": "clang",
        "repo": "https://gitlab.com/ThankYouMario/android_prebuilts_clang-standalone/",
        "branch": "14",  // 更新到 Clang 14 以支持 Android 15
        "binaryEnv": ["bin"]
      },
      {
        "name": "gcc64",
        "url": "https://android.googlesource.com/platform/prebuilts/gcc/linux-x86/aarch64/aarch64-linux-android-4.9/+archive/refs/tags/android-13.0.0_r82.tar.gz",  // 使用 Android 13 的 GCC
        "binaryEnv": ["bin"]
      },
      {
        "name": "gcc32", 
        "url": "https://android.googlesource.com/platform/prebuilts/gcc/linux-x86/arm/arm-linux-androideabi-4.9/+archive/refs/tags/android-13.0.0_r82.tar.gz",  // 32位 GCC
        "binaryEnv": ["bin"]
      }
    ],
    "enableCcache": true,
    "params": {
      "ARCH": "arm64",
      "CC": "clang",
      "externalCommands": {
        "CLANG_TRIPLE": "aarch64-linux-gnu-",
        "CROSS_COMPILE": "aarch64-linux-android-",
        "CROSS_COMPILE_ARM32": "arm-linux-androideabi-",
        "LD": "ld.lld",
        "AR": "llvm-ar",
        "NM": "llvm-nm",
        "OBJCOPY": "llvm-objcopy",
        "OBJDUMP": "llvm-objdump",
        "READELF": "llvm-readelf",
        "OBJSIZE": "llvm-size",
        "STRIP": "llvm-strip",
        "LDGOLD": "aarch64-linux-gnu-ld.gold",
        "LLVM_AR": "llvm-ar",
        "LLVM_DIS": "llvm-dis",
        "CONFIG_THINLTO": "y"  // 修改为 y 启用 LTO
      }
    },
    "AnyKernel3": {
      "use": true,
      "release": true,
      "custom": {
        "repo": "https://github.com/easterNday/AnyKernel3/",
        "branch": "thyme"
      }
    },
    "enableKernelSU": true,
    "enableLXC": true
  }
]
